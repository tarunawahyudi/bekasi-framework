{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                   
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "app",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["app/**/*"],
}